{
	"tasks": {
		"dev": "deno run -A build.ts dev",
		"build": "deno run -A build.ts build"
	},
	"compilerOptions": {
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"lib": [
			"deno.ns",
			"deno.window",
			"deno.url",
			"deno.web"
		]
	},
	"lint": {
		"files": {
			"exclude": ["dist/"]
		}
	},
	"fmt": {
		"files": {
			"exclude": ["dist/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 180
		}
	},
	"test": {
		"files": {
			"exclude": ["dist/"]
		}
	}
}
