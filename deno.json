{
	"tasks": {
		"dev": "deno run -A build.ts --watch",
		"build": "deno run -A build.ts",
		"serve": "deno run --allow-net --allow-read https://deno.land/std@0.157.0/http/file_server.ts dist/"
	},
	"compilerOptions": {
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"lib": [
			"deno.ns",
			"deno.window",
			"deno.url",
			"deno.web"
		]
	},
	"lint": {
		"files": {
			"exclude": ["dist/"]
		}
	},
	"fmt": {
		"files": {
			"exclude": ["dist/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 180
		}
	},
	"test": {
		"files": {
			"exclude": ["dist/"]
		}
	}
}
