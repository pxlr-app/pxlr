{
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"deno.window",
			"deno.url",
			"deno.web",
			"deno.unstable"
		],
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment"
	},
	"lint": {
		"files": {
			"exclude": [
				"editor/dist"
			]
		}
	},
	"fmt": {
		"files": {
			"exclude": [
				"editor/dist"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 180
		}
	},
	"tasks": {
		"dev": "deno run -A --unstable editor/build.ts dev",
		"build": "deno run -A --unstable editor/build.ts build"
	}
}
