{
	"importMap": "import_map.json",
	"compilerOptions": {
		"jsxFactory": "createElement",
		"jsxFragmentFactory": "Fragment",
		"lib": [
			"deno.ns",
			"deno.window",
			"deno.url",
			"deno.web"
		],
		"types": [
			"https://raw.githubusercontent.com/DefinitelyTyped/DefinitelyTyped/master/types/wicg-file-system-access/index.d.ts"
		]
	},
	"lint": {
		"files": {
			"exclude": ["dist/", ".deno/"]
		}
	},
	"fmt": {
		"files": {
			"exclude": ["dist/", ".deno/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 180
		}
	},
	"test": {
		"files": {
			"exclude": ["dist/", ".deno/"]
		}
	}
}
